{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "outDir": "./dist",
        "paths": {
            "*": ["node_modules/*", "src/*"]
        },
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "jsx": "react"
    },
    "include": ["./src/**/*"]
}
